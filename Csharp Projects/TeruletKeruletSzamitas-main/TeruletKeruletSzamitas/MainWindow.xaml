<Window x:Class="TeruletKeruletSzamitas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Háromszög Kalkulátor" Height="400" Width="450">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Háromszög kalkulátor" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Hosszúság a (cm):"/>
            <TextBox Name="txtSideA" Margin="0 5 0 10" Text="10"/>

            <TextBlock Text="Hosszúság b (cm):"/>
            <TextBox Name="txtSideB" Margin="0 5 0 10" Text="20"/>

            <TextBlock Text="Hosszúság c (cm):"/>
            <TextBox Name="txtSideC" Margin="0 5 0 10" Text="15"/>

            <TextBlock Name="lblResult" FontSize="18" FontWeight="Bold" Margin="0 20 0 0">
                <Run Text="Kerület (cm): "/>
                <Run x:Name="lblKerulet" Text="0" TextDecorations="Underline"/>
                <LineBreak/>
                <Run Text="Terület (cm²): "/>
                <Run x:Name="lblTerulet" Text="0" TextDecorations="Underline"/>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
